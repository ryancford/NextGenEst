<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawable="@drawable/next_gen_actor_row_bg">
        <RelativeLayout
            android:layout_width="@dimen/next_gen_actor_thumbnail_dimen"
            android:layout_height="@dimen/next_gen_actor_thumbnail_dimen"
            android:duplicateParentState="true">
            <com.wb.nextgenlibrary.widget.FontFitTextView
                android:layout_margin="2dp"
                android:includeFontPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textSize="100sp"
                android:id="@+id/next_gen_actor_initial"
                android:background="@drawable/nge_yellow_circle"/>
            <com.wb.nextgenlibrary.widget.CircularClippedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:id="@+id/next_gen_actor_avatar"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/white_ring"
                android:duplicateParentState="true"/>

        </RelativeLayout>

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="@dimen/spacing_small"
           android:background="@android:color/transparent"
           android:layout_gravity="center_vertical"
           android:orientation="vertical">
           <TextView
               android:id="@+id/next_gen_actor_real_name"
               android:layout_width="fill_parent"
               android:textColor="@color/selectable_text_color"
               android:fontFamily="sans-serif-condensed"
               android:textSize="@dimen/textMedium"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/next_gen_actor_character_name"
               android:layout_width="fill_parent"
               android:textColor="@color/selectable_sub_text_color"
               android:fontFamily="sans-serif-condensed"
               android:textSize="@dimen/textMSmall"
               android:textStyle="italic"
               android:layout_height="wrap_content"/>
       </LinearLayout>
   </LinearLayout>