<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NextGenTabStyle">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NextGenActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:tabWidgetStyle">@style/NextGenTabStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextNormalBold</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
        
        <!-- flxabv44 generated action bar -->
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
         <item name="android:selectableItemBackground">@android:color/transparent</item>

     </style>

     <style name="FlixsterWebViewStyle" parent="@style/Theme.AppCompat.Light">
     </style>

     <style name="FlixsterModalActivity" parent="@style/Theme.AppCompat.Light.DialogWhenLarge">
         <item name="android:windowCloseOnTouchOutside">true</item>
         <item name="android:windowIsTranslucent">true</item>
         <item name="windowNoTitle">true</item>
         <item name="android:windowBackground">@color/transparent_black</item>
         <!--<item name="windowBackground">@android:color/transparent</item>  -->
    </style>

    <!-- New Unified Text styles -->

    <style name="TextLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextLargeBold" parent="@style/TextLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMediumBold" parent="@style/TextMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormal" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextNormalBold" parent="@style/TextNormal">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSmallBold" parent="@style/TextSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmaller" parent="@style/TextNormal">
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="TextXSmall" parent="@style/TextSmall">
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="TextXSmallBold" parent="@style/TextXSmall">
        <item name="android:textStyle">bold</item>  
    </style>
    
    <style name="TextTiny" parent="@style/TextSmall">
        <item name="android:textSize">6sp</item>
    </style>
    
    <style name="TextTinyBold" parent="@style/TextTiny">
        <item name="android:textStyle">bold</item>  
    </style>
    
    <style name="TextSmallGrey" parent="@style/TextSmall">
        <item name="android:textColor">@color/grey05</item>
    </style>

    <style name="TextSmallerGrey" parent="@style/TextSmaller">
        <item name="android:textColor">@color/grey05</item>
    </style>
    
    <style name="TextSubheader" parent="@style/TextNormalBold">
        <item name="android:shadowColor">@color/subheader_shadow</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
    </style>

    <!-- Custom font styles -->

    <style name="legend_text" parent="@style/TextNormal">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="header_text" parent="@style/TextNormalBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/subheader_shadow</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
    </style>
    
    <style name="content_detail_header_text" parent="@style/TextNormalBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/subheader_shadow</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
    </style>
    
    <style name="episode_detail_header_text" parent="@style/TextNormalBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
    </style>

    <style name="navbar_text" parent="@style/TextSmallBold">
        <item name="android:textColor">@color/button_subnav_textcolor</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="ticket_error_text" parent="@style/TextNormalBold">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ticket_success_text" parent="@style/TextNormalBold">
        <item name="android:textColor">@color/darkgreen</item>
    </style>

    <!-- Individual activity theme -->

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MovieTileProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>
    
    <style name="DialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
 
    </style>

    <style name="MainMenuStyle">
        <item name="android:background">@color/nextgen_tab_normal_color</item>
        <item name="android:textColor">@color/nextgen_tab_text_normal_color</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    
	<style name="TransparentFloatingDialog" parent="@style/DialogStyle">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@color/transparent_black2</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
	</style>
    <style name="AlertDialog" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AlertDialog.TitleText" parent="@style/TextLarge">
        <item name="android:textColor">@color/holo_blue_light</item>
    </style>

    <style name="AlertDialog.BodyText" parent="@style/TextMedium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ExtraActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:tabWidgetStyle">@style/NextGenTabStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextNormalBold</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>
	
	<style name="CenterAlignedAlertDialog" parent="@style/AlertDialog">
		<item name="android:gravity">center_horizontal</item>
	</style>
	
	<style name="AlertDialogButton" parent="@android:style/Widget.ListView">
	    <item name="android:textAppearance">@style/TextNormal</item>
	    <item name="android:minHeight">@dimen/alert_dialog_button_bar_height</item>
    </style>
	
	<style name="AlertDialogButtonBottomRight" parent="@style/AlertDialogButton">
    </style>
    
	<style name="SlidingTabStrip" parent="@style/navbar_text">
        <item name="android:background">@color/bg_inactive</item>
        <item name="pstsDividerColor">#909090</item>
        <item name="pstsIndicatorColor">@color/nextgen_blue</item>
        <item name="pstsIndicatorHeight">8dp</item>
        <item name="pstsTextAllCaps">false</item>
        <item name="pstsUnderlineColor">#2a97cc</item>
        <item name="pstsUnderlineHeight">0dp</item>
    </style>
    
	<style name="subheader_text" parent="@style/TextNormalBold">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/subheader_text</item>
    </style>

    <style name="NextGenPlayerActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:tabWidgetStyle">@style/NextGenTabStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextNormalBold</item>
        <item name="logo">@android:color/transparent</item>

    </style>

    <style name="NextGenMediaControllerStyle">
        <item name="android:textColor">#FFFFFF</item>
        <!--<item name="android:thumb">@drawable/seek_bar_thumb</item>-->
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>




    <style name="PlayerActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:tabWidgetStyle">@style/NextGenTabStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextNormalBold</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>


    <style name="Theme.Nge.BaseSelector" parent="@android:style/Theme.Holo.Light" />
    <style name="Theme.Nge.NoTitle" parent="@style/Theme.Nge.BaseSelector">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Nge.BaseSelector.Dark" parent="@android:style/Theme.Holo" />
    <style name="Theme.Nge.NoTitle.Dark" parent="@style/Theme.Nge.BaseSelector.Dark">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Nge.FullscreenVideo" parent="@style/Theme.Nge.NoTitle.Dark">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="Theme.Nge.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>