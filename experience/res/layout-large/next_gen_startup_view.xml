<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nextgen="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wb.nextgenlibrary.widget.FixedAspectRatioFrameLayout
        xmlns:nextgen="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_background_aspect_ratio_frame"
        nextgen:aspectRatioHeight="9"
        nextgen:aspectRatioWidth="16"
        android:layout_centerInParent="true"
        nextgen:priority="HEIGHT_PRIORITY"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        nextgen:allowLargerThanParent="true">
        <ImageView
            android:id="@+id/startup_image_view"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.wb.nextgenlibrary.widget.FixedAspectRatioFrameLayout>
    <com.wb.nextgenlibrary.widget.FixedAspectRatioFrameLayout
        xmlns:nextgen="http://schemas.android.com/apk/res-auto"
        android:id="@+id/video_parent_aspect_ratio_frame"
        nextgen:aspectRatioHeight="9"
        nextgen:aspectRatioWidth="16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        nextgen:priority="HEIGHT_PRIORITY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        nextgen:allowLargerThanParent="true">
        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/startup_exo_video_view"
            nextgen:use_controller="false"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <!--<VideoView
            android:id="@+id/startup_video_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->
    </com.wb.nextgenlibrary.widget.FixedAspectRatioFrameLayout>
    <com.wb.nextgenlibrary.widget.FixedAspectRatioFrameLayout
        xmlns:nextgen="http://schemas.android.com/apk/res-auto"
        android:id="@+id/button_parent_aspect_ratio_frame"
        nextgen:aspectRatioHeight="9"
        nextgen:aspectRatioWidth="16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        nextgen:priority="HEIGHT_PRIORITY"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        nextgen:allowLargerThanParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/startup_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">
                <com.wb.nextgenlibrary.widget.SelectedMaskImageButton
                    android:id="@+id/next_gen_startup_play_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitXY"
                    nextgen:selectedOverlayColor="@color/transparent_black"
                    android:background="@android:color/transparent" />
                <com.wb.nextgenlibrary.widget.SelectedMaskImageButton
                    android:id="@+id/next_gen_startup_extra_button"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    nextgen:selectedOverlayColor="@color/transparent_black"
                    android:background="@android:color/transparent"/>
                <com.wb.nextgenlibrary.widget.SelectedMaskImageButton
                    android:id="@+id/next_gen_startup_purchase_button"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    nextgen:selectedOverlayColor="@color/transparent_black"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/startup_text_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center|bottom">
                <Button
                    android:id="@+id/next_gen_startup_play_text_button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/next_gen_startup_extra_text_button"
                    android:text="@string/play_movie"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_centerHorizontal="true"
                    android:background="@color/red" />
                <Button
                    android:id="@+id/next_gen_startup_extra_text_button"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/extras"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:background="@color/gray"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/startup_title_image"
                android:layout_width="wrap_content"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </com.wb.nextgenlibrary.widget.FixedAspectRatioFrameLayout>
    <LinearLayout
        android:id="@+id/nge_main_exit"
        android:layout_margin="@dimen/spacing_xlarge"
        android:drawableLeft="@drawable/nge_main_exit_icon"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <ImageView
            android:src="@drawable/nge_main_exit_icon"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <com.wb.nextgenlibrary.widget.FontFitTextView
            android:layout_width="100dp"
            android:paddingLeft="@dimen/spacing_normal"
            android:layout_height="match_parent"
            android:text="@string/nge_exit"
            android:textSize="200sp"
            android:gravity="left|center_vertical"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

</RelativeLayout>