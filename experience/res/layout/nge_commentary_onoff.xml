<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/nge_background_selector"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/commentary_radio_image"
        android:duplicateParentState="true"
        android:paddingLeft="@dimen/spacing_small"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/commentary_radio_button"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/commentary_text_button"
            style="?android:attr/spinnerItemStyle"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-condensed"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="Off"
            android:textSize="@dimen/textMedium"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:ellipsize="marquee"
            android:textAlignment="inherit"/>
        <TextView
            android:id="@+id/commentary_description"
            android:visibility="gone"
            style="?android:attr/spinnerItemStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textMSmall"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="5"
            android:textAlignment="inherit"
            android:ellipsize="marquee"/>

    </LinearLayout>


</LinearLayout>