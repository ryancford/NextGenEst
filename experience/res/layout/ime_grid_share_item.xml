<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nextgen="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/ime_grid_item_bg"
    android:padding="@dimen/spacing_small">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ime_title"
            android:layout_width="wrap_content"
            android:text="Title"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textMedium"
            android:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/textMedium"
            android:layout_height="@dimen/textMedium"
            android:src="@drawable/icon_player_share"/>

    </LinearLayout>
    <com.wb.nextgenlibrary.widget.FixedAspectRatioFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        nextgen:aspectRatioWidth="16"
        nextgen:aspectRatioHeight="9">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ime_image_poster"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
            <ImageView
                android:id="@+id/ime_item_play_logo"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/ime_play_icon_dimen"
                android:layout_height="@dimen/ime_play_icon_dimen"
                android:src="@drawable/nge_play_button">

            </ImageView>

        </RelativeLayout>

    </com.wb.nextgenlibrary.widget.FixedAspectRatioFrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="@dimen/spacing_xsmall"
            android:id="@+id/actor_page_facebook_button"
            android:src="@drawable/social_icon_facebook"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:layout_width="@dimen/textSmall"
            android:layout_height="@dimen/textSmall"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_marginLeft="@dimen/spacing_xsmall"
            android:id="@+id/actor_page_twitter_button"
            android:src="@drawable/social_icon_twitter"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:layout_width="@dimen/textSmall"
            android:layout_height="@dimen/textSmall"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_marginLeft="@dimen/spacing_xsmall"
            android:id="@+id/ime_desc_text1"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/textSmall"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="sth"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>